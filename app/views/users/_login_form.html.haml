= form_for(@user) do |f|
  %h3
    Already registered?
  %h4
    Sign in
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :hashed_password
    %br/
    = f.text_field :hashed_password
  .actions
    = f.submit 'Login', class:"btn btn-default"
