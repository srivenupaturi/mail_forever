= form_for(@user, url: login_users_path) do |f|
  %br
  %h3
    Sign in
  %br
  - if @user.errors.any?
    = render 'errors'
  %br
  %br
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :hashed_password
    %br/
    = f.text_field :hashed_password
  .actions
    = f.submit 'Login', class:"btn btn-default"
